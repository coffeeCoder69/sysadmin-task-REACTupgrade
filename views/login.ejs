                                    <input name="email" type="email" class="form-control form-control-lg rounded-0" id="email"  autocomplete="new-password"  required>
               
                                </div>
                                <div class="form-group">
                                    <label>Password</label>
                                    <input  name="pass" type="password" class="form-control form-control-lg rounded-0" id="pwd1"  required>
                        
                                </div>
                                <div>
                                    <label class="custom-control custom-checkbox">
                                     New user? <a href="/signup" class="register-form-link">Sign Up</a>
                                    </label>
                                </div>
                                <button type="submit" class="btn btn-success btn-lg float-right" id="btnLogin" formaction="/login">Login</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>

</body>
